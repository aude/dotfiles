# keyboard
super + space
    xkb-layout-toggle

# audio
{XF86AudioMute,super + control + m}
    audio-control analog mute toggle
{XF86AudioLowerVolume,super + control + Down}
    audio-control analog volume '2.5%-'
{XF86AudioRaiseVolume,super + control + Up}
    audio-control analog volume '2.5%+'

# video
{XF86Display,super + control + v}
    video-toggle
XF86MonBrightnessUp
    brightnessctl set '5%+'
XF86MonBrightnessDown
    brightnessctl set '5%-'

# player
{XF86AudioPlay,super + control + p}
    player-control play toggle
{XF86AudioNext,super + control + >}
    player-control play next
{XF86AudioPrev,super + control + <}
    player-control play previous

# image
super + control + r
    set-background-image

# lock screen
{XF86ScreenSaver,super + control + l}
    screen-lock
