[${XDG_CONFIG_HOME:-$HOME/.config}/vcsh/repo.d/aude.git]
checkout = vcsh clone 'https://github.com/aude/dotfiles.git' "$(basename "$MR_REPO" '.git')"

[src/system-conf]
checkout = git clone 'https://github.com/aude/system-conf.git' "$(basename "$MR_REPO")"

[src/zsh-completions]
checkout = git clone --depth 1 'https://github.com/zsh-users/zsh-completions.git' "$(basename "$MR_REPO")"
[src/z]
checkout = git clone --depth 1 'https://github.com/rupa/z.git' "$(basename "$MR_REPO")"
[src/n]
checkout = git clone --depth 1 'https://github.com/tj/n.git' "$(basename "$MR_REPO")"
[src/archbootstrap]
checkout = git clone --depth 1 'https://github.com/aude/archbootstrap.git' "$(basename "$MR_REPO")"
[dev/go/src/github.com/junegunn/fzf]
checkout = go get github.com/junegunn/fzf
update = go get -u github.com/junegunn/fzf
[dev/go/src/github.com/svent/sift]
checkout = go get github.com/svent/sift
update = go get -u github.com/svent/sift

# vim
[DEFAULT]
skip = [ "$1" = "update" ] && ! hours_since "$1" 16

