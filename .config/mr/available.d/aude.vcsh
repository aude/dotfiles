[${XDG_CONFIG_HOME:-$HOME/.config}/vcsh/repo.d/aude.git]
checkout = vcsh clone 'https://github.com/aude/dotfiles.git' 'aude'

[src/system-conf]
checkout = git clone 'https://github.com/aude/system-conf.git' 'system-conf'

[src/zsh-completions]
checkout = git clone 'https://github.com/zsh-users/zsh-completions.git' 'zsh-completions'
[src/z]
checkout = git clone 'https://github.com/rupa/z.git' 'z'
[src/selecta]
checkout = git clone 'https://github.com/garybernhardt/selecta.git' 'selecta'
[src/nvm]
checkout = git clone 'https://github.com/creationix/nvm.git' 'nvm'
update = git pull origin master && git checkout `git describe --abbrev=0 --tags`

# vim
[DEFAULT]
skip = [ "$1" = "update" ] && ! hours_since "$1" 16

[.vim/bundle/vim-pathogen]
checkout = git clone 'https://github.com/tpope/vim-pathogen.git' 'vim-pathogen'
[.vim/bundle/vim-colors-solarized]
