#!/bin/sh

mute_pulseaudio() {
	exec pactl -- set-sink-mute "$sink" "$1"
}

volume_pulseaudio() {
	exec pactl -- set-sink-volume "$sink" "$1"
}

use_pulseaudio() {
	exec pactl -- set-default-sink "$sink"
}

audiosystem=pulseaudio

# set up vars
case "$audiosystem" in
	pulseaudio)
		sink=$(pactl list sinks short | awk "\$2 ~ /$1/ {print \$2}")
		;;
esac

$2_$audiosystem "$3"
