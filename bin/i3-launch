#!/bin/sh

if [ "$#" -eq 0 ]; then
	message="Usage: $(basename "$0") <default command> [-<workspace name> <command> ...]"
	echo "$message" 1>&2
	i3-nagbar -m "$message"
	exit 1
fi

default_command=$1; shift
current_workspace_name=$(i3-msg -t get_workspaces | jq '.[] | select(.focused) | .name' | tr -d '"')
while [ -n "$1" ]; do
	if [ "$1" = "-$current_workspace_name" ]; then
		shift
		exec $1
	fi
	shift
done

exec $default_command
