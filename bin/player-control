#!/bin/sh

case "$1" in
	play)
		case "$2" in
			toggle)
				if pgrep quodlibet >/dev/null 2>&1; then
					exec quodlibet --play-pause
				fi
				;;
			next)
				if pgrep quodlibet >/dev/null 2>&1; then
					exec quodlibet --next
				fi
				;;
			previous)
				if pgrep quodlibet >/dev/null 2>&1; then
					exec quodlibet --previous
				fi
				;;
			*)
				exit 1
				;;
		esac
		;;
	*)
		exit 1
		;;
esac
