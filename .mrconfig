[DEFAULT]
jobs = 5

include = cat ~/.config/mr/config.d/*
# update Vundle repos. assume all "Plugin" directives to be pointing to GitHub repos
include = for vimrc in ~/.vimrc ~/.vim/vimrc; do test -f $vimrc && break; done; test -f $vimrc && cat $vimrc | grep "^Plugin '" | sed -r "s|^Plugin '([^/]+/([^']+))'.*|[.vim/bundle/\2]\ncheckout = git clone --recursive 'https://github.com/\1.git' '\2'\nupdate = git pull --recurse-submodules \"\$@\"|" || true
